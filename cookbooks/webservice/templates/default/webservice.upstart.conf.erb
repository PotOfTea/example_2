#!upstart
description "Linux metrics servver"

env USER=<%= node[:webservice][:user] %>
start on filesystem or runlevel [2345]
stop on shutdown


script

	exec sudo -u $USER sh -c "java -jar <%= node[:webservice][:dir] %>/<%= node[:webservice][:jar] %> ws.url=<%= node[:webservice][:url_full] %> ws.data.url=<%= node[:webservice][:dashboard_url] %>"

end script
